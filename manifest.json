{
  "name": "Parify",
  "description": "Parify adds typographic love to websites with poor typography.",
  "version": "0.0.0.2",
  "permissions": [
    "tabs", "http://*/*", "https://*/*"
  ],
  "browser_action": {
      "default_title": "Parify paragraphs",
      "default_icon": "icon.png",
      "default_popup": "popup.html"
  },
  "content_scripts": [
      {
        "matches": ["http://*/*"],
        "js": ["popup.js"]      }
  ],
  "manifest_version": 2
}
